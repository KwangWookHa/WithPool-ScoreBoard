<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_score_board"
    app:startDestination="@id/fragment_choice_player">

    <fragment
        android:id="@+id/fragment_choice_player"
        android:name="wook.pool.board.screen.scoreboard.ChoicePlayerFragment"
        android:label="ChoicePlayerFragment"
        tools:layout="@layout/fragment_choice_player">
        <action
            android:id="@+id/action_fragment_choice_player_to_fragment_player_list"
            app:destination="@id/fragment_player_list" />
        <action
            android:id="@+id/action_fragment_choice_player_to_fragment_nine_ball"
            app:destination="@id/fragment_nine_ball" />

    </fragment>

    <fragment
        android:id="@+id/fragment_player_list"
        android:name="wook.pool.board.screen.scoreboard.PlayerListFragment"
        android:label="PlayerListFragment"
        tools:layout="@layout/fragment_player_list">
        <action
            android:id="@+id/action_fragment_player_list_to_fragment_choice_player"
            app:destination="@id/fragment_choice_player"
            app:popUpTo="@id/fragment_choice_player"
            app:popUpToInclusive="true" />
        <argument
            android:name="isModeChoiceLeft"
            android:defaultValue="true"
            app:argType="boolean"
            app:nullable="false" />
    </fragment>

    <fragment
        android:id="@+id/fragment_nine_ball"
        android:name="wook.pool.board.screen.scoreboard.NineBallFragment"
        android:label="NineBallFragment"
        tools:layout="@layout/fragment_point_nine_ball">

        <argument
            android:name="matchPlayers"
            android:defaultValue="@null"
            app:argType="wook.pool.board.data.model.MatchPlayers"
            app:nullable="true" />

        <action
            android:id="@+id/action_fragment_nine_ball_to_fragment_choice_player"
            app:destination="@id/fragment_choice_player"
            app:popUpTo="@id/fragment_choice_player"
            app:popUpToInclusive="true" />

    </fragment>


</navigation>