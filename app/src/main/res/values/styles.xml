<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Dialog -->
    <style name="DialogTheme" parent="@style/Base.Theme.AppCompat.Light.Dialog">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowBackground">#99000000</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <!-- Font Style -->
    <style name="font_default_setting">
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Font Style Noto Sans -->
    <style name="notosans_black" parent="font_default_setting">
        <item name="android:fontFamily">@font/notosans_black</item>
    </style>

    <style name="notosans_bold" parent="font_default_setting">
        <item name="android:fontFamily">@font/notosans_bold</item>
    </style>

    <style name="notosans_light" parent="font_default_setting">
        <item name="android:fontFamily">@font/notosans_light</item>
    </style>

    <style name="notosans_medium" parent="font_default_setting">
        <item name="android:fontFamily">@font/notosans_medium</item>
    </style>

    <style name="notosans_regular" parent="font_default_setting">
        <item name="android:fontFamily">@font/notosans_regular</item>
    </style>

    <style name="notosans_thin" parent="font_default_setting">
        <item name="android:fontFamily">@font/notosans_thin</item>
    </style>

    <!-- Font Style Poppins -->
    <style name="poppins_extrabold" parent="font_default_setting">
        <item name="android:fontFamily">@font/poppins_extrabold</item>
    </style>

    <style name="poppins_bold" parent="font_default_setting">
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="poppins_light" parent="font_default_setting">
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="poppins_medium" parent="font_default_setting">
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="poppins_regular" parent="font_default_setting">
        <item name="android:fontFamily">@font/poppins_regular</item>
    </style>

    <style name="poppins_semibold" parent="font_default_setting">
        <item name="android:fontFamily">@font/poppins_semibold</item>
    </style>

    <style name="poppins_thin" parent="font_default_setting">
        <item name="android:fontFamily">@font/poppins_thin</item>
    </style>

    <style name="white" parent="poppins_semibold_16">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="black" parent="poppins_semibold_16">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="whiteButton" parent="notosans_bold_14">
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/bg_ffffff_r_24_bd_e4e4e4</item>
    </style>

    <style name="redButton" parent="notosans_bold_14">
        <item name="android:textColor">@color/selector_ffffff_text</item>
        <item name="android:background">@drawable/selector_red_button</item>
    </style>

    <style name="blackButton" parent="notosans_medium_14">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_000000_r_6</item>
    </style>

</resources>