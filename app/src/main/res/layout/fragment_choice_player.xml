<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewModel"
            type="wook.pool.board.screen.scoreboard.ScoreBoardViewModel" />

        <variable
            name="listener"
            type="android.view.View.OnClickListener" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_4c4c4c">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutLeftPlayer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:background="@drawable/bg_ffffff_round_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.35">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgLeftFirst"
                bindVisibleOrGone="@{viewModel.isTurnLeftPlayer}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_flag_24_black"
                app:layout_constraintBottom_toBottomOf="@+id/textLeftFirst"
                app:layout_constraintEnd_toStartOf="@+id/textLeftFirst"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textLeftFirst" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textLeftFirst"
                style="@style/notosans_medium_18"
                bindVisibleOrGone="@{viewModel.isTurnLeftPlayer}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/fragment_choice_player_first"
                app:layout_constraintBottom_toTopOf="@+id/imgLeftCircle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imgLeftFirst" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgLeftCircle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="@{listener::onClick}"
                android:src="@drawable/circle_gray_size_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.7" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textLeftPlayer"
                style="@style/notosans_bold_24"
                bindVisibleOrGone="@{viewModel.playerLeft == null}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/common_player"
                app:layout_constraintBottom_toTopOf="@+id/textBtnLeftChoicePlayer"
                app:layout_constraintEnd_toEndOf="@+id/imgLeftCircle"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/imgLeftCircle"
                app:layout_constraintTop_toTopOf="@+id/imgLeftCircle"
                app:layout_constraintVertical_chainStyle="packed" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textBtnLeftChoicePlayer"
                style="@style/notosans_medium_18"
                bindVisibleOrGone="@{viewModel.playerLeft == null}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_ffffff_round_6"
                android:padding="8dp"
                android:text="@string/fragment_choice_player"
                app:layout_constraintBottom_toBottomOf="@+id/imgLeftCircle"
                app:layout_constraintEnd_toEndOf="@+id/textLeftPlayer"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/textLeftPlayer"
                app:layout_constraintTop_toBottomOf="@+id/textLeftPlayer" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textLeftPlayerName"
                style="@style/notosans_bold_36"
                bindVisibleOrGone="@{viewModel.playerLeft != null}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.playerLeft.name}"
                app:layout_constraintBottom_toTopOf="@+id/textLeftPlayerHandicap"
                app:layout_constraintEnd_toEndOf="@+id/imgLeftCircle"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/imgLeftCircle"
                app:layout_constraintTop_toTopOf="@+id/imgLeftCircle"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="하광욱" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textLeftPlayerHandicap"
                style="@style/poppins_bold_36"
                bindUnderLineText="@{String.valueOf(viewModel.playerLeft.handicap)}"
                bindVisibleOrGone="@{viewModel.playerLeft != null}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/imgLeftCircle"
                app:layout_constraintEnd_toEndOf="@+id/textLeftPlayerName"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/textLeftPlayerName"
                app:layout_constraintTop_toBottomOf="@+id/textLeftPlayerName"
                tools:text="5" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgBtnLeftChangePlayer"
                bindVisibleOrGone="@{viewModel.playerLeft != null}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="2dp"
                android:onClick="@{listener::onClick}"
                android:src="@drawable/ic_change_48_black"
                app:layout_constraintBottom_toBottomOf="@+id/textBtnLeftChangePlayer"
                app:layout_constraintEnd_toStartOf="@+id/textBtnLeftChangePlayer" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textBtnLeftChangePlayer"
                style="@style/notosans_medium_18"
                bindVisibleOrGone="@{viewModel.playerLeft != null}"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:onClick="@{listener::onClick}"
                android:text="@string/fragment_choice_player_change"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutRightPlayer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:background="@drawable/bg_ffffff_round_12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.35">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgRightFirst"
                bindVisibleOrGone="@{!viewModel.isTurnLeftPlayer}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_flag_24_black"
                app:layout_constraintBottom_toBottomOf="@+id/textRightFirst"
                app:layout_constraintEnd_toStartOf="@+id/textRightFirst"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textRightFirst" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textRightFirst"
                style="@style/notosans_medium_18"
                bindVisibleOrGone="@{!viewModel.isTurnLeftPlayer}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="@string/fragment_choice_player_first"
                app:layout_constraintBottom_toTopOf="@+id/imgRightCircle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imgRightFirst" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgRightCircle"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:onClick="@{listener::onClick}"
                android:src="@drawable/circle_gray_size_16"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="1:1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.7" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textRightPlayer"
                style="@style/notosans_bold_24"
                bindVisibleOrGone="@{viewModel.playerRight == null}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/common_player"
                app:layout_constraintBottom_toTopOf="@+id/textBtnRightChoicePlayer"
                app:layout_constraintEnd_toEndOf="@+id/imgRightCircle"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/imgRightCircle"
                app:layout_constraintTop_toTopOf="@+id/imgRightCircle"
                app:layout_constraintVertical_chainStyle="packed" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textBtnRightChoicePlayer"
                style="@style/notosans_medium_18"
                bindVisibleOrGone="@{viewModel.playerRight == null}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_ffffff_round_6"
                android:padding="8dp"
                android:text="@string/fragment_choice_player"
                app:layout_constraintBottom_toBottomOf="@+id/imgRightCircle"
                app:layout_constraintEnd_toEndOf="@+id/textRightPlayer"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/textRightPlayer"
                app:layout_constraintTop_toBottomOf="@+id/textRightPlayer" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textRightPlayerName"
                style="@style/notosans_bold_36"
                bindVisibleOrGone="@{viewModel.playerRight != null}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewModel.playerRight.name}"
                app:layout_constraintBottom_toTopOf="@+id/textRightPlayerHandicap"
                app:layout_constraintEnd_toEndOf="@+id/imgRightCircle"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/imgRightCircle"
                app:layout_constraintTop_toTopOf="@+id/imgRightCircle"
                app:layout_constraintVertical_chainStyle="packed"
                tools:text="하광욱" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textRightPlayerHandicap"
                style="@style/poppins_bold_36"
                bindUnderLineText="@{String.valueOf(viewModel.playerRight.handicap)}"
                bindVisibleOrGone="@{viewModel.playerRight != null}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/imgRightCircle"
                app:layout_constraintEnd_toEndOf="@+id/textRightPlayerName"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="@+id/textRightPlayerName"
                app:layout_constraintTop_toBottomOf="@+id/textRightPlayerName"
                tools:text="5" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgBtnRightChangePlayer"
                bindVisibleOrGone="@{viewModel.playerRight != null}"
                android:layout_width="24dp"
                android:layout_height="0dp"
                android:layout_marginEnd="2dp"
                android:onClick="@{listener::onClick}"
                android:src="@drawable/ic_change_48"
                app:layout_constraintBottom_toBottomOf="@+id/textBtnRightChangePlayer"
                app:layout_constraintEnd_toStartOf="@+id/textBtnRightChangePlayer" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textBtnRightChangePlayer"
                style="@style/notosans_medium_18"
                bindVisibleOrGone="@{viewModel.playerRight != null}"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:onClick="@{listener::onClick}"
                android:text="@string/fragment_choice_player_change"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutBtnStartGame"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="16dp"
            android:background="@drawable/bg_main_round_6"
            android:onClick="@{listener::onClick}"
            app:layout_constraintBottom_toBottomOf="@+id/layoutLeftPlayer"
            app:layout_constraintEnd_toStartOf="@+id/layoutRightPlayer"
            app:layout_constraintStart_toEndOf="@+id/layoutLeftPlayer">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgStartGame"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_start_game_24"
                app:layout_constraintBottom_toBottomOf="@+id/textStartGame"
                app:layout_constraintEnd_toStartOf="@+id/textStartGame"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textStartGame" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textStartGame"
                style="@style/notosans_bold_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_choice_player_start_game"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imgStartGame"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutBtnChangeFirst"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_43a047_round_6"
            android:onClick="@{listener::onClick}"
            app:layout_constraintBottom_toTopOf="@+id/layoutBtnStartGame"
            app:layout_constraintEnd_toStartOf="@+id/layoutRightPlayer"
            app:layout_constraintStart_toEndOf="@+id/layoutLeftPlayer">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgChangeFirst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_flag_24"
                app:layout_constraintBottom_toBottomOf="@+id/textChangeFirst"
                app:layout_constraintEnd_toStartOf="@+id/textChangeFirst"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textChangeFirst" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textChangeFirst"
                style="@style/notosans_bold_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_choice_player_change_first"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imgChangeFirst"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutBtnAdjustHandicap"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_43a047_round_6"
            android:onClick="@{listener::onClick}"
            app:layout_constraintBottom_toTopOf="@+id/layoutBtnChangeFirst"
            app:layout_constraintEnd_toStartOf="@+id/layoutRightPlayer"
            app:layout_constraintStart_toEndOf="@+id/layoutLeftPlayer">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgAdjustHandicap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/textAdjustHandicap"
                app:layout_constraintEnd_toStartOf="@+id/textAdjustHandicap"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textAdjustHandicap" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textAdjustHandicap"
                style="@style/notosans_bold_20"
                bindAdjustedHandicap="@{viewModel.handicapAdjustment}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imgAdjustHandicap"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@string/fragment_choice_player_adjust_handicap_1" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutBtnClose"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/bg_gray_round_6"
            android:onClick="@{listener::onClick}"
            app:layout_constraintEnd_toStartOf="@+id/layoutRightPlayer"
            app:layout_constraintStart_toEndOf="@+id/layoutLeftPlayer"
            app:layout_constraintTop_toTopOf="@+id/layoutLeftPlayer">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imgClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:src="@drawable/ic_backspace_24_black"
                app:layout_constraintBottom_toBottomOf="@+id/textClose"
                app:layout_constraintEnd_toStartOf="@+id/textClose"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="packed"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textClose" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textClose"
                style="@style/notosans_bold_20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_choice_player_close"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/imgClose"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/imgBtnSelectGame"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_margin="16dp"
            android:onClick="@{listener::onClick}"
            android:src="@drawable/ic_9ball"
            app:layout_constraintBottom_toTopOf="@+id/layoutBtnAdjustHandicap"
            app:layout_constraintDimensionRatio="1"
            app:layout_constraintEnd_toStartOf="@+id/layoutRightPlayer"
            app:layout_constraintStart_toEndOf="@+id/layoutLeftPlayer"
            app:layout_constraintTop_toBottomOf="@+id/layoutBtnClose" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>