<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textTitle"
            style="@style/notosans_medium_20"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/gray_e4e4e4"
            android:gravity="center"
            android:text="@string/fragment_choice_player"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layoutHandicapSelector"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textTitle"
            app:layout_constraintWidth_percent="0.2">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/poppins_bold_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:gravity="center"
                android:text="Handicap" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textBtnHandicap34"
                style="@style/poppins_bold_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/bg_gray_round_6"
                android:gravity="center"
                android:paddingVertical="8dp"
                android:text="3 - 4" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textBtnHandicap56"
                style="@style/poppins_bold_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/bg_gray_round_6"
                android:gravity="center"
                android:paddingVertical="8dp"
                android:text="5 - 6" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textBtnHandicap78"
                style="@style/poppins_bold_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/bg_gray_round_6"
                android:gravity="center"
                android:paddingVertical="8dp"
                android:text="7 - 8" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textBtnHandicap910"
                style="@style/poppins_bold_20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:background="@drawable/bg_gray_round_6"
                android:gravity="center"
                android:paddingVertical="8dp"
                android:text="9 - 10" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layoutHeaderLeft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:paddingVertical="8dp"
            android:weightSum="100"
            app:layout_constraintEnd_toEndOf="@+id/recyclerPlayersLeft"
            app:layout_constraintStart_toStartOf="@+id/recyclerPlayersLeft"
            app:layout_constraintTop_toBottomOf="@+id/textTitle">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/poppins_bold_16"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="35"
                android:gravity="center"
                android:text="Club"
                android:textColor="@color/gray_848484" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/poppins_bold_16"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:gravity="center"
                android:text="Name"
                android:textColor="@color/gray_848484" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/poppins_bold_16"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:gravity="center"
                android:text="Handi"
                android:textColor="@color/gray_848484" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:id="@+id/viewDivider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/gray_e4e4e4"
            app:layout_constraintEnd_toEndOf="@id/layoutHeaderLeft"
            app:layout_constraintStart_toStartOf="@+id/layoutHeaderLeft"
            app:layout_constraintTop_toBottomOf="@id/layoutHeaderLeft" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerPlayersLeft"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="2dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/bg_ffffff_round_6"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/recyclerPlayersRight"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toEndOf="@+id/layoutHandicapSelector"
            app:layout_constraintTop_toBottomOf="@+id/viewDivider"
            tools:itemCount="10"
            tools:listitem="@layout/item_choice_player" />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/layoutHeaderRight"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            android:paddingVertical="8dp"
            android:weightSum="100"
            app:layout_constraintBottom_toBottomOf="@+id/layoutHeaderLeft"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/recyclerPlayersRight"
            app:layout_constraintTop_toTopOf="@+id/layoutHeaderLeft">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/poppins_bold_16"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:gravity="center"
                android:text="Club"
                android:textColor="@color/gray_848484" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/poppins_bold_16"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="40"
                android:gravity="center"
                android:text="Name"
                android:textColor="@color/gray_848484" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/poppins_bold_16"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:gravity="center"
                android:text="Handi"
                android:textColor="@color/gray_848484" />

        </androidx.appcompat.widget.LinearLayoutCompat>

        <View
            android:id="@+id/viewDivider2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@color/gray_e4e4e4"
            app:layout_constraintEnd_toEndOf="@+id/layoutHeaderRight"
            app:layout_constraintStart_toStartOf="@+id/layoutHeaderRight"
            app:layout_constraintTop_toBottomOf="@id/layoutHeaderLeft" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerPlayersRight"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginHorizontal="8dp"
            android:background="@drawable/bg_ffffff_round_6"
            app:layout_constraintBottom_toBottomOf="@+id/recyclerPlayersLeft"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/recyclerPlayersLeft"
            app:layout_constraintTop_toBottomOf="@+id/viewDivider2"
            tools:itemCount="10"
            tools:listitem="@layout/item_choice_player" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>